// tsconfig.json
{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "es2019",
      "dom"
    ], // or appropriate libs
    "types": [
      "node"
    ]
  },
  "include": [
    "**/types/*.d.ts",
    "**/*.js",
    "**/*.cjs",
    "**/*.ts"
  ]
}